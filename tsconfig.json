{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "moduleResolution": "Node",
      "outDir": "./dist",
      "rootDir": "./src",
      "jsx": "react-jsx",
      "strict": false,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "allowJs": true,
      "resolveJsonModule": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }